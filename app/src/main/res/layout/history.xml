<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.Name of India's oldest epic is"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h1">

        <RadioButton android:id="@+id/one1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ramayana" />

        <RadioButton android:id="@+id/one2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mahabharata" />

        <RadioButton android:id="@+id/one3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abhigyan Shakutalam"/>

        <RadioButton android:id="@+id/one4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manasa Mangal"/>
    </RadioGroup>

    <TextView
        android:id="@+id/h2"
        android:layout_below="@id/op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.Founder of VijayaNagar dynasty"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h2">

        <RadioButton android:id="@+id/two1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hariya and Bukka" />

        <RadioButton android:id="@+id/two2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krishna Deva Raya" />

        <RadioButton android:id="@+id/two3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenali Raman"/>

        <RadioButton android:id="@+id/two4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None of these"/>
    </RadioGroup>

    <TextView
        android:id="@+id/h3"
        android:layout_below="@id/op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3.Founder of Harihara Modern Turkish Republic"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h3">

        <RadioButton android:id="@+id/three1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atatark Kamal Pasha" />

        <RadioButton android:id="@+id/three2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetullah" />

        <RadioButton android:id="@+id/three3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recep Tyep Erdoggan"/>

        <RadioButton android:id="@+id/three4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gulen"/>
    </RadioGroup>

    <TextView
        android:id="@+id/h4"
        android:layout_below="@id/op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.Arabic name of Palestine"
        android:textSize="20dp"/>

    <RadioGroup
        android:id="@+id/op4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h4">

        <RadioButton android:id="@+id/four1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sana" />

        <RadioButton android:id="@+id/four2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petro" />

        <RadioButton android:id="@+id/four3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hanumatra"/>

        <RadioButton android:id="@+id/four4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alquds"/>
    </RadioGroup>

            <TextView
                android:id="@+id/h5"
                android:layout_below="@id/op4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.University Alma Mater of 1 president,PM,Noble prize winner"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/op5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/h5">

                <RadioButton android:id="@+id/five1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Punjab University" />

                <RadioButton android:id="@+id/five2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi University" />

                <RadioButton android:id="@+id/five3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JNU"/>

                <RadioButton android:id="@+id/five4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BHU"/>
            </RadioGroup>

            <Button
                android:id="@+id/submit"
                android:layout_below="@id/op5"
                android:text="SUBMIT"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>